<Page x:Class="ProtectionProjectManagement.Pages.AddProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProtectionProjectManagement.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProjectPage">

    <Grid>
        <StackPanel>
            <Button Content="Назад" Click="BackButton_Click" Margin="10"/>
            <TextBlock Text="Название проекта:" Margin="5"/>
            <TextBox x:Name="ProjectNameTextBox" Margin="5"/>

            <TextBlock Text="Дата начала:" Margin="5"/>
            <DatePicker x:Name="StartDatePicker" Margin="5"/>

            <TextBlock Text="Дата окончания:" Margin="5"/>
            <DatePicker x:Name="EndDatePicker" Margin="5"/>

            <TextBlock Text="Приоритет:" Margin="5"/>
            <TextBox x:Name="PriorityTextBox" Margin="5"/>

            <TextBlock Text="ID заказчика:" Margin="5"/>
            <TextBox x:Name="CustomerCompanyIDTextBox" Margin="5"/>

            <TextBlock Text="ID подрядчика:" Margin="5"/>
            <TextBox x:Name="ContractorCompanyIDTextBox" Margin="5"/>

            <TextBlock Text="ID менеджера проекта:" Margin="5"/>
            <TextBox x:Name="ProjectManagerIDTextBox" Margin="5"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
