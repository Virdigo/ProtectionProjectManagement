<Page x:Class="ProtectionProjectManagement.Pages.AddTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProtectionProjectManagement.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddTaskPage">

    <Grid>
        <StackPanel>
            <Button Content="Назад" Click="BackButton_Click" Margin="10"/>

            <TextBlock Text="Название задачи:" Margin="5"/>
            <TextBox x:Name="TaskNameTextBox" Margin="5"/>

            <TextBlock Text="Автор ID:" Margin="5"/>
            <TextBox x:Name="AuthorIDTextBox" Margin="5"/>

            <TextBlock Text="Исполнитель ID:" Margin="5"/>
            <TextBox x:Name="PerformerIDTextBox" Margin="5"/>

            <TextBlock Text="Проект ID:" Margin="5"/>
            <TextBox x:Name="ProjectIDTextBox" Margin="5"/>

            <TextBlock Text="Статус:" Margin="5"/>
            <TextBox x:Name="StatusTextBox" Margin="5"/>

            <TextBlock Text="Комментарий:" Margin="5"/>
            <TextBox x:Name="CommentTextBox" Margin="5"/>

            <TextBlock Text="Приоритет:" Margin="5"/>
            <TextBox x:Name="PriorityTextBox" Margin="5"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>

</Page>
