<Page x:Class="ProtectionProjectManagement.Pages.AddCompanyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProtectionProjectManagement.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCompanyPage">

    <Grid>
        <StackPanel>
            <Button Content="Назад" Click="BackButton_Click" Margin="10"/>
            <TextBlock Text="Название компании:" Margin="5"/>
            <TextBox x:Name="CompanyNameTextBox" Margin="5"/>

            <Button Content="Сохранить" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
